
{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node", "config": { "maxDuration": 60 } },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/server.js" }, // Redirect all requests to server.js
    { "src": "/public/(.*)", "dest": "/public/$1" } // Serve static files from public
  ]
}

